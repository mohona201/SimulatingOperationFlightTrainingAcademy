<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="651.0" prefWidth="1015.0"
            style="-fx-background-radius: 25; -fx-background-color: #E2E7BD;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.simulatingoperationflighttrainingacademy.Madhu.airTrafficControllerDashboardController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="18"
              style="-fx-background-color: #BBC598; -fx-padding: 25 15; -fx-background-radius: 20;"
              BorderPane.alignment="CENTER">
            <children>

                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2A2A2A;"
                       text="Air Traffic Controller" />

                <Label style="-fx-font-size: 12px; -fx-text-fill: #3F3F3F;"
                       text="controller@airport.gov" />

                <Label prefHeight="10" text="" />

                <VBox alignment="CENTER" spacing="10">
                    <children>

                        <Button onAction="#dashboardOnActionButton"
                                style="-fx-pref-width:165; -fx-pref-height:30;
                                -fx-background-color: #4A4A3C;
                                -fx-text-fill: #FFFFFF; -fx-font-size: 13px;
                                -fx-background-radius: 10;"
                                text="ðŸ  Dashboard" />

                        <Button onAction="#activeFlightsOnActionButton"
                                style="-fx-pref-width:165; -fx-pref-height:30;
                                -fx-background-color: #4A4A3C;
                                -fx-text-fill: #FFFFFF; -fx-font-size: 13px;
                                -fx-background-radius: 10;"
                                text="âœˆ Active Flights" />

                        <Button onAction="#sectorOverviewOnActionButton"
                                style="-fx-pref-width:165; -fx-pref-height:30;
                                -fx-background-color: #4A4A3C;
                                -fx-text-fill: #FFFFFF; -fx-font-size: 13px;
                                -fx-background-radius: 10;"
                                text="ðŸ—º Sector Overview" />

                        <Button onAction="#incidentReportsOnActionButton"
                                style="-fx-pref-width:165; -fx-pref-height:30;
                                -fx-background-color: #4A4A3C;
                                -fx-text-fill: #FFFFFF; -fx-font-size: 13px;
                                -fx-background-radius: 10;"
                                text="âš  Incident Reports" />

                        <Button onAction="#logsOnActionButton"
                                style="-fx-pref-width:165; -fx-pref-height:30;
                                -fx-background-color: #4A4A3C;
                                -fx-text-fill: #FFFFFF; -fx-font-size: 13px;
                                -fx-background-radius: 10;"
                                text="ðŸ“„ Logs" />

                    </children>
                </VBox>

            </children>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="false"
                    hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">

            <content>
                <VBox spacing="25" style="-fx-padding: 30;">
                    <children>

                        <Label text="ATC Dashboard"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3A3A3A;" />

                        <HBox spacing="20">
                            <children>

                                <VBox prefWidth="220" spacing="10"
                                      style="-fx-background-color: #FFFFFF;
                                      -fx-background-radius: 15; -fx-padding: 15;
                                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                                      8, 0, 0, 3);">
                                    <children>
                                        <Label text="Active Flights"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                                        <TextField fx:id="activeFlightCountTextField"
                                                   editable="false"
                                                   style="-fx-background-color: #F5F5F5;
                                                   -fx-background-radius: 8; -fx-padding: 6 10;" />
                                    </children>
                                </VBox>

                                <VBox prefWidth="220" spacing="10"
                                      style="-fx-background-color: #FFFFFF;
                                      -fx-background-radius: 15; -fx-padding: 15;
                                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                                      8, 0, 0, 3);">
                                    <children>
                                        <Label text="Incoming Flights"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                                        <TextField fx:id="incomingFlightsTextField"
                                                   editable="false"
                                                   style="-fx-background-color: #F5F5F5;
                                                   -fx-background-radius: 8; -fx-padding: 6 10;" />
                                    </children>
                                </VBox>

                                <VBox prefWidth="220" spacing="10"
                                      style="-fx-background-color: #FFFFFF;
                                      -fx-background-radius: 15; -fx-padding: 15;
                                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                                      8, 0, 0, 3);">
                                    <children>
                                        <Label text="Ongoing Incidents"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                                        <TextField fx:id="incidentCountTextField"
                                                   editable="false"
                                                   style="-fx-background-color: #F5F5F5;
                                                   -fx-background-radius: 8; -fx-padding: 6 10;" />
                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                        <VBox spacing="15"
                              style="-fx-background-color: #FFFFFF;
                              -fx-background-radius: 15; -fx-padding: 20;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                              8, 0, 0, 3);">

                            <children>

                                <Label text="Live Flight Traffic"
                                       style="-fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: #444444;" />

                                <TreeTableView fx:id="flightTrafficTable"
                                               prefHeight="250"
                                               style="-fx-background-radius: 10; -fx-border-radius: 10;">
                                    <columns>
                                        <TreeTableColumn fx:id="flightIdColumn" prefWidth="120" text="Flight ID" />
                                        <TreeTableColumn fx:id="airlineColumn" prefWidth="150" text="Airline" />
                                        <TreeTableColumn fx:id="originColumn" prefWidth="120" text="Origin" />
                                        <TreeTableColumn fx:id="destinationColumn" prefWidth="120" text="Destination" />
                                        <TreeTableColumn fx:id="altitudeColumn" prefWidth="100" text="Altitude" />
                                        <TreeTableColumn fx:id="flightStatusColumn" prefWidth="140" text="Status" />
                                    </columns>
                                </TreeTableView>

                            </children>

                        </VBox>

                        <VBox spacing="15"
                              style="-fx-background-color: #FFFFFF;
                              -fx-background-radius: 15; -fx-padding: 20;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                              8, 0, 0, 3);">
                            <children>

                                <Label text="Sector Overview"
                                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                                <HBox spacing="15">
                                    <children>
                                        <Label text="Select Sector"
                                               style="-fx-background-color: #BBC598;
                                               -fx-background-radius: 4; -fx-padding: 4 8;" />
                                        <ComboBox fx:id="sectorComboBox"
                                                  prefWidth="200"
                                                  style="-fx-background-color: #D7D0C7;
                                                  -fx-background-radius: 5;" />
                                        <Button text="View"
                                                onAction="#viewSectorOnAction"
                                                prefHeight="30"
                                                style="-fx-background-color: #BBC598;
                                                -fx-text-fill: white; -fx-background-radius: 12;" />
                                    </children>
                                </HBox>

                                <TreeTableView fx:id="sectorTable"
                                               prefHeight="230"
                                               style="-fx-background-radius: 10;">
                                    <columns>
                                        <TreeTableColumn fx:id="sectorNameColumn" prefWidth="150" text="Sector" />
                                        <TreeTableColumn fx:id="trafficLoadColumn" prefWidth="150" text="Traffic Load" />
                                        <TreeTableColumn fx:id="assignedControllerColumn" prefWidth="200" text="Assigned Controller" />
                                    </columns>
                                </TreeTableView>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </content>

        </ScrollPane>
    </center>

    <right>
        <VBox prefHeight="523.0" prefWidth="229.0"
              style="-fx-padding: 20;"
              BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="12"
                      style="-fx-background-color: #FFFFFF;
                      -fx-background-radius: 15; -fx-padding: 15;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                      8, 0, 0, 2);">
                    <children>
                        <Label text="Notifications"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label fx:id="notificationsTextField"
                               alignment="TOP_LEFT"
                               prefWidth="175" wrapText="true"
                               style="-fx-label-padding: 10;
                               -fx-background-color: #BBC598;
                               -fx-background-radius: 10;"
                               text="No notifications yet." />
                    </children>
                </VBox>
            </children>
        </VBox>
    </right>

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>

                <Menu text="File">
                    <items>
                        <MenuItem text="Close" />
                    </items>
                </Menu>

                <Menu text="Edit">
                    <items>
                        <MenuItem text="Delete" />
                    </items>
                </Menu>

                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>

</BorderPane>
