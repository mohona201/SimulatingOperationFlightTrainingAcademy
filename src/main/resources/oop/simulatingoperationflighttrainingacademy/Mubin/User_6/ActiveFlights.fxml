<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="719.0" prefWidth="1087.0"
            style="-fx-background-radius: 25; -fx-background-color: #E2E7BD;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.simulatingoperationflighttrainingacademy.Madhu.ActiveFlightsController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="18"
              style="-fx-background-color: #BBC598; -fx-padding: 25 15; -fx-background-radius: 20;"
              BorderPane.alignment="CENTER">
            <children>

                <Label fx:id="NameView"
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2A2A2A;"
                       text="Air Traffic Controller" />

                <Label fx:id="IDView"
                       style="-fx-font-size: 12px; -fx-text-fill: #3F3F3F;"
                       text="controller@airport.gov" />

                <Label prefHeight="10" text="" />

                <VBox alignment="CENTER" spacing="10">

                    <Button onAction="#dashboardOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸ  Dashboard" />

                    <Button onAction="#activeFlightsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="âœˆï¸ Active Flights" />

                    <Button onAction="#weatherOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸŒ¦ Weather" />

                    <Button onAction="#incidentsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸš¨ Incident Reports" />

                    <Button onAction="#sessionLogsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸ“‘ Session Logs" />

                    <Button onAction="#approveTakeoffLandingOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸ›« Takeoff / Landing" />

                    <Button onAction="#logoutOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color: #4A4A3C;
                                   -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 10;"
                            text="ðŸ”“ Log Out" />

                </VBox>

            </children>
        </VBox>
    </left>

    <!-- CENTER: ACTIVE FLIGHTS -->
    <center>
        <VBox prefHeight="643.0" prefWidth="659.0" spacing="25"
              style="-fx-padding: 15;">
            <children>

                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3A3A3A;"
                       text="Active Flights" />

                <!-- FLIGHT SUMMARY BOXES -->
                <HBox spacing="20">
                    <children>

                        <VBox prefWidth="220" spacing="10"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;
                                     -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                                     8, 0, 0, 3);">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;"
                                       text="Total Active Flights" />
                                <TextField fx:id="totalActiveFlightsTextField"
                                           editable="false"
                                           style="-fx-background-color: #F5F5F5; -fx-background-radius: 8;
                                                  -fx-padding: 6 10;" />
                            </children>
                        </VBox>

                        <VBox prefWidth="220" spacing="10"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;
                                     -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                                     8, 0, 0, 3);">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;"
                                       text="Flights Approaching Airport" />
                                <TextField fx:id="approachingFlightsTextField"
                                           editable="false"
                                           style="-fx-background-color: #F5F5F5; -fx-background-radius: 8;
                                                  -fx-padding: 6 10;" />
                            </children>
                        </VBox>

                    </children>
                </HBox>

                <!-- ACTIVE FLIGHT LIST TABLE -->
                <VBox spacing="15"
                      style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;
                             -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                             8, 0, 0, 3);">
                    <children>

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                               text="Live Active Flights List" />

                        <!-- FILTERING -->
                        <HBox spacing="15">
                            <children>
                                <Label style="-fx-background-color: #BBC598; -fx-background-radius: 4;
                                               -fx-padding: 4 8;" text="Search Flight" />
                                <TextField fx:id="searchFlightTextField" promptText="Enter Flight ID"
                                           style="-fx-background-color: #F5F5F5; -fx-background-radius: 8;
                                                  -fx-padding: 6 10;" />
                                <Button fx:id="searchFlightButton"
                                        onAction="#searchFlightOnActionButton"
                                        style="-fx-background-color: #BBC598; -fx-text-fill: white;
                                               -fx-background-radius: 12;"
                                        text="Search" />
                            </children>
                        </HBox>

                        <TableView fx:id="activeFlightsTableView"
                                   prefHeight="350"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;">
                            <columns>

                                <TableColumn fx:id="flightIdColumn" prefWidth="120" text="Flight ID" />
                                <TableColumn fx:id="airlineColumn" prefWidth="150" text="Airline" />
                                <TableColumn fx:id="originColumn" prefWidth="120" text="Origin" />
                                <TableColumn fx:id="destinationColumn" prefWidth="120" text="Destination" />
                                <TableColumn fx:id="altitudeColumn" prefWidth="100" text="Altitude" />
                                <TableColumn fx:id="speedColumn" prefWidth="100" text="Speed" />
                                <TableColumn fx:id="statusColumn" prefWidth="140" text="Status" />

                            </columns>
                        </TableView>

                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <!-- RIGHT SIDE: NOTIFICATIONS -->
    <right>
        <VBox prefHeight="523.0" prefWidth="229.0" style="-fx-padding: 20;"
              BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="12"
                      style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;
                             -fx-padding: 15;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08),
                             8, 0, 0, 2);">
                    <children>

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                               text="Notifications" />

                        <Label fx:id="notificationLabel" alignment="TOP_LEFT"
                               prefWidth="175.0"
                               wrapText="true"
                               style="-fx-label-padding: 10; -fx-background-color: #BBC598;
                                      -fx-background-radius: 10;"
                               text="No notifications yet." />

                    </children>
                </VBox>
            </children>
        </VBox>
    </right>

    <!-- TOP MENUBAR -->
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items><MenuItem text="Close" /></items>
                </Menu>
                <Menu text="Edit">
                    <items><MenuItem text="Delete" /></items>
                </Menu>
                <Menu text="Help">
                    <items><MenuItem text="About" /></items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>
