                <Label style="-fx-font-size:15px; -fx-font-weight:bold; -fx-text-fill:#2A2A2A;" text="Dr. Alex Rahman" />
                <Label style="-fx-font-size:12px; -fx-text-fill:#3F3F3F;" text="Medical Specialist" />

                <Label prefHeight="10" text="" />

                <VBox alignment="CENTER" spacing="10">

                    <Button onAction="#dashboardOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="ðŸ   Dashboard" />

