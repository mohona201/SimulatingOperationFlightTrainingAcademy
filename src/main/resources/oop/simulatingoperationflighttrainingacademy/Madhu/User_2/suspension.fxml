                                        <TableColumn fx:id="incidentDescriptionTableColumn" prefWidth="250" text="Description" />
                                    </columns>
                                </TableView>

                            </children>
                        </VBox>

                        <VBox spacing="20" style="-fx-background-color:white; -fx-background-radius:18;                                      -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),10,0,0,3);">

                            <children>

                                <Label style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" text="Apply Suspension" />

                                <GridPane hgap="20" vgap="15">

                                    <children>

                                        <Label text="Suspension Reason" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextArea fx:id="suspensionReasonTextArea" prefRowCount="3" style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Start Date" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <DatePicker fx:id="suspensionStartDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="End Date" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <DatePicker fx:id="suspensionEndDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                    </children>
                           <columnConstraints>
                              <ColumnConstraints />
