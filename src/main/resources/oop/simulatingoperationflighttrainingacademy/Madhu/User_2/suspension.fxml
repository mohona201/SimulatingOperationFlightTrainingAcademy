                    <Button onAction="#suspensionsOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="ðŸš«  Suspensions" />

                    <Button onAction="#reportsOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="ðŸ“„  Reports" />

                    <Button onAction="#renewalsOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="ðŸ”„  Renewals" />

                    <Button onAction="#incidentsOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="âš ï¸  Incidents" />

                    <Button onAction="#vaccinationsOnActionButton" style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C; -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" text="ðŸ’‰  Vaccinations" />

                </VBox>

            </children>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;" BorderPane.alignment="CENTER">
            <content>

                <VBox spacing="30" style="-fx-padding:30;">
                    <children>

                        <Label style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#2A2A2A;" text="Medical Suspension Management" />

                        <VBox spacing="15" style="-fx-background-color:white; -fx-background-radius:18;                                      -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),10,0,0,3);">

                            <children>

                                <Label style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" text="Select Patient" />

                                <TableView fx:id="patientSuspensionTableView" prefHeight="180">
                                    <columns>
                                        <TableColumn fx:id="patientNameTableColumn" prefWidth="180" text="Patient Name" />
                                        <TableColumn fx:id="patientIdTableColumn" prefWidth="140" text="Patient ID" />
                                        <TableColumn fx:id="recentIncidentTableColumn" prefWidth="200" text="Recent Incident" />
                                    </columns>
                                </TableView>

                                <Button onAction="#loadIncidentOnActionButton" style="-fx-background-color:#BBC598; -fx-text-fill:white;                                                -fx-background-radius:12; -fx-padding:7 18;" text="Load Incident Details" />
