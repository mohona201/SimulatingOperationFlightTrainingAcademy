                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <HBox spacing="20">

                                    <children>

                                        <RadioButton fx:id="suspendRadioButton" onAction="#suspendOnActionButton" text="Suspend" />

                                        <RadioButton fx:id="noSuspendRadioButton" onAction="#noSuspendOnActionButton" text="Do Not Suspend" />

                                    </children>
                                </HBox>

                                <Button fx:id="confirmSuspensionButton" onAction="#confirmSuspensionOnActionButton" style="-fx-background-color:#8FA36D; -fx-text-fill:white;                                                -fx-background-radius:12; -fx-padding:8 20;" text="Confirm Suspension" />

                                <Label fx:id="suspensionStatusLabel" style="-fx-font-size:14px; -fx-text-fill:#333;" text="" />

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </content>
        </ScrollPane>
    </center>

    <right>
        <VBox prefWidth="200" spacing="18" style="-fx-padding:25; -fx-background-color:#E2E7BD;" BorderPane.alignment="TOP_CENTER">

            <children>

                <VBox spacing="12" style="-fx-background-color:white; -fx-background-radius:15;                              -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),8,0,0,2);">

                    <children>

                        <Label style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" text="Notifications" />

