<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="720.0" prefWidth="1350.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.simulatingoperationflighttrainingacademy.Madhu.User_2.preFlightExmController"
            style="-fx-background-color:#E2E7BD; -fx-background-radius:20;">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="18"
              style="-fx-background-color:#BBC598; -fx-padding:25 15; -fx-background-radius:20;"
              BorderPane.alignment="CENTER">

            <children>

                <ImageView fitHeight="90" fitWidth="90" preserveRatio="true"
                           style="-fx-background-radius:50; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25),10,0,0,2);" />

                <Label text="Dr. Alex Rahman" style="-fx-font-size:15px; -fx-font-weight:bold; -fx-text-fill:#2A2A2A;" />
                <Label text="Medical Specialist" style="-fx-font-size:12px; -fx-text-fill:#3F3F3F;" />

                <Label text="" prefHeight="10" />

                <VBox alignment="CENTER" spacing="10">

                    <Button text="ðŸ   Dashboard"
                            fx:id="dashboardButton"
                            onAction="#dashboardOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸ“‹  Pre-Flight Exams"
                            fx:id="preFlightButton"
                            onAction="#preFlightOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸ‘¤  Regular Patients"
                            fx:id="regularPatientsButton"
                            onAction="#regularPatientsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸš«  Suspensions"
                            fx:id="suspensionButton"
                            onAction="#suspensionOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸ“„  Reports"
                            fx:id="reportsButton"
                            onAction="#reportsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸ”„  Renewals"
                            fx:id="renewalsButton"
                            onAction="#renewalsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="âš ï¸  Incidents"
                            fx:id="incidentsButton"
                            onAction="#incidentsOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                    <Button text="ðŸ’‰  Vaccinations"
                            fx:id="vaccinationButton"
                            onAction="#vaccinationOnActionButton"
                            style="-fx-pref-width:165; -fx-pref-height:30; -fx-background-color:#4A4A3C;
                                   -fx-text-fill:white; -fx-font-size:13; -fx-background-radius:10;" />

                </VBox>

            </children>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;" BorderPane.alignment="CENTER">
            <content>

                <VBox spacing="30" style="-fx-padding:30;">
                    <children>

                        <Label text="Pre-Flight Medical Examination"
                               style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#2A2A2A;" />

                        <VBox spacing="15"
                              style="-fx-background-color:white; -fx-background-radius:18;
                                     -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),10,0,0,3);">

                            <children>

                                <Label text="Select Patient"
                                       style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" />

                                <TableView fx:id="patientListTableView" prefHeight="180">
                                    <columns>
                                        <TableColumn fx:id="patientNameTableColumn" text="Patient Name" prefWidth="180" />
                                        <TableColumn fx:id="patientIdTableColumn" text="Patient ID" prefWidth="140" />
                                        <TableColumn fx:id="appointmentDateTableColumn" text="Date" prefWidth="140" />
                                    </columns>
                                </TableView>

                                <Button text="Load Medical Records"
                                        fx:id="loadRecordsButton"
                                        onAction="#loadRecordsOnActionButton"
                                        style="-fx-background-color:#BBC598; -fx-text-fill:white;
                                               -fx-background-radius:12; -fx-padding:7 18;" />
                            </children>
                        </VBox>

                        <VBox spacing="20"
                              style="-fx-background-color:white; -fx-background-radius:18;
                                     -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),10,0,0,3);">

                            <children>

                                <Label text="Medical Examination Details"
                                       style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" />

                                <GridPane hgap="20" vgap="15">

                                    <children>

                                        <Label text="Height (cm)" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                        <TextField fx:id="heightTextField"
                                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                   style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                        <Label text="Weight (kg)" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                        <TextField fx:id="weightTextField"
                                                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                   style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                        <Label text="Blood Pressure" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                        <TextField fx:id="bloodPressureTextField"
                                                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                                                   style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                        <Label text="Heart Rate (bpm)" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                        <TextField fx:id="heartRateTextField"
                                                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                                                   style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                        <Label text="Vision Test" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                        <TextField fx:id="visionTextField"
                                                   GridPane.rowIndex="4" GridPane.columnIndex="1"
                                                   style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                        <Label text="Additional Notes" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                                        <TextArea fx:id="notesTextArea"
                                                  prefRowCount="3"
                                                  GridPane.rowIndex="5" GridPane.columnIndex="1"
                                                  style="-fx-background-color:#F5F5F5; -fx-background-radius:8;" />

                                    </children>
                                </GridPane>

                                <HBox spacing="20">

                                    <children>

                                        <RadioButton fx:id="approvedRadioButton"
                                                     onAction="#approvedOnActionButton"
                                                     text="Approved" />

                                        <RadioButton fx:id="notApprovedRadioButton"
                                                     onAction="#notApprovedOnActionButton"
                                                     text="Not Approved" />

                                    </children>
                                </HBox>

                                <Button fx:id="submitExamButton"
                                        onAction="#submitExamOnActionButton"
                                        text="Submit Examination Result"
                                        style="-fx-background-color:#8FA36D; -fx-text-fill:white;
                                               -fx-background-radius:12; -fx-padding:8 20;" />

                                <Label fx:id="examStatusLabel"
                                       style="-fx-font-size:14px; -fx-text-fill:#333;" text="" />

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </content>
        </ScrollPane>
    </center>

    <right>
        <VBox prefWidth="200" spacing="18"
              style="-fx-padding:25; -fx-background-color:#E2E7BD;"
              BorderPane.alignment="TOP_CENTER">

            <children>

                <VBox spacing="12"
                      style="-fx-background-color:white; -fx-background-radius:15;
                             -fx-padding:20; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),8,0,0,2);">

                    <children>
                        <Label text="Notifications"
                               style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#333;" />

                        <Label fx:id="notificationLabel"
                               wrapText="true"
                               style="-fx-background-color:#BBC598; -fx-background-radius:12;
                                      -fx-padding:12; -fx-text-fill:#222;"
                               text="No new notifications." />
                    </children>

                </VBox>

            </children>
        </VBox>
    </right>

</BorderPane>
