<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="960.0" prefWidth="1579.0"
            style="-fx-background-color:#E2E7BD; -fx-background-radius:20;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.simulatingoperationflighttrainingacademy.Madhu.User_2.medicalReportController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="18"
              style="-fx-background-color:#BBC598; -fx-padding:25 15; -fx-background-radius:20;"
              BorderPane.alignment="CENTER">

            <children>
                <ImageView fitHeight="90" fitWidth="90" preserveRatio="true"
                           style="-fx-background-radius:50; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25),10,0,0,2);" />

                <Label style="-fx-font-size:15px; -fx-font-weight:bold;" text="Dr. Alex Rahman" />
                <Label style="-fx-font-size:12px;" text="Medical Specialist" />

                <VBox alignment="CENTER" spacing="10">

                    <Button onAction="#dashboardOnActionButton" text="ðŸ   Dashboard"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#preFlightOnActionButton" text="ðŸ“‹  Pre-Flight Exams"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#regularPatientsOnActionButton" text="ðŸ‘¤  Regular Patients"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#suspensionsOnActionButton" text="ðŸš«  Suspensions"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#reportsOnActionButton" text="ðŸ“„  Reports"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#renewalsOnActionButton" text="ðŸ”„  Renewals"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#incidentsOnActionButton" text="âš ï¸  Incidents"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                    <Button onAction="#vaccinationsOnActionButton" text="ðŸ’‰  Vaccinations"
                            style="-fx-pref-width:165; -fx-background-color:#4A4A3C; -fx-text-fill:white;" />

                </VBox>
            </children>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;"
                    BorderPane.alignment="CENTER">
            <content>

                <VBox spacing="30" style="-fx-padding:30;">
                    <children>

                        <Label style="-fx-font-size:22px; -fx-font-weight:bold;"
                               text="Medical Reports &amp; Analytics" />

                        <!-- REPORT GENERATION SECTION -->
                        <VBox spacing="20"
                              style="-fx-background-color:white; -fx-background-radius:18; -fx-padding:25;">
                            <children>

                                <Label style="-fx-font-size:16px; -fx-font-weight:bold;"
                                       text="Generate Report" />

                                <HBox spacing="20">
                                    <children>

                                        <Label text="Select Report Type" />
                                        <ComboBox fx:id="reportTypeComboBox" prefWidth="200" />

                                        <Label text="Report ID" />
                                        <TextField fx:id="reportIdTextField" prefWidth="100" />

                                        <Label text="Report Name" />
                                        <TextField fx:id="reportNameTextField" prefWidth="150" />

                                        <Label text="Date" />
                                        <DatePicker fx:id="reportDatePicker" />

                                        <Button onAction="#loadReportOnActionButton"
                                                text="Load"
                                                style="-fx-background-color:#BBC598; -fx-text-fill:white;" />

                                    </children>
                                </HBox>

                                <!-- REPORT TABLE -->
                                <TableView fx:id="reportTableView" prefHeight="260">
                                    <columns>
                                        <TableColumn fx:id="reportIdTableColumn" prefWidth="120" text="Report ID" />
                                        <TableColumn fx:id="reportNameTableColumn" prefWidth="200" text="Report Name" />
                                        <TableColumn fx:id="reportDateTableColumn" prefWidth="160" text="Generated Date" />
                                        <TableColumn fx:id="reportStatusTableColumn" prefWidth="150" text="Status" />
                                    </columns>
                                </TableView>

                                <HBox spacing="20">
                                    <children>
                                        <Button onAction="#downloadReportOnActionButton"
                                                text="Download Report"
                                                style="-fx-background-color:#8FA36D; -fx-text-fill:white;" />

                                        <Button onAction="#exportPdfOnActionButton"
                                                text="Export as PDF"
                                                style="-fx-background-color:#4A4A3C; -fx-text-fill:white;" />
                                    </children>
                                </HBox>

                                <Label fx:id="reportStatusLabel" style="-fx-font-size:14px;" text="" />

                            </children>
                        </VBox>

                        <!-- STATISTICS SECTION -->
                        <VBox spacing="20"
                              style="-fx-background-color:white; -fx-background-radius:18; -fx-padding:25;">
                            <children>

                                <Label style="-fx-font-size:16px; -fx-font-weight:bold;"
                                       text="Annual Statistics" />

                                <TableView fx:id="statisticsTableView" prefHeight="220">
                                    <columns>
                                        <TableColumn fx:id="statCategoryTableColumn" prefWidth="200" text="Category" />
                                        <TableColumn fx:id="statValueTableColumn" prefWidth="160" text="Value" />
                                        <TableColumn fx:id="statYearTableColumn" prefWidth="120" text="Year" />
                                    </columns>
                                </TableView>

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </content>
        </ScrollPane>
    </center>

    <!-- RIGHT NOTIFICATION PANEL -->
    <right>
        <VBox prefWidth="200" spacing="18"
              style="-fx-padding:25; -fx-background-color:#E2E7BD;"
              BorderPane.alignment="TOP_CENTER">

            <children>

                <VBox spacing="12"
                      style="-fx-background-color:white; -fx-background-radius:15; -fx-padding:20;">
                    <children>

                        <Label style="-fx-font-size:16px; -fx-font-weight:bold;"
                               text="Notifications" />

                        <Label fx:id="notificationLabel"
                               style="-fx-background-color:#BBC598; -fx-background-radius:12; -fx-padding:12;"
                               text="No new notifications." wrapText="true" />

                    </children>
                </VBox>

            </children>
        </VBox>
    </right>

</BorderPane>
