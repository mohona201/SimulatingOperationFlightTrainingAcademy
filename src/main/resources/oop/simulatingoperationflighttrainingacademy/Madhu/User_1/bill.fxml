<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.simulatingoperationflighttrainingacademy.Madhu.User_1.billController">

    <left>
        <VBox spacing="20" style="-fx-background-color: #1A237E;" prefWidth="230">
            <Label text="Student Dashboard" style="-fx-text-fill: white; -fx-font-size: 20; -fx-padding: 20 0 0 20;" />
            <Button text="Dashboard" fx:id="DashBoardButton" onAction="#DashBoardOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Logbook" fx:id="logBookButton" onAction="#logBookOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Exams" fx:id="exmButton" onAction="#exmOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Schedule" fx:id="ScheduleButton" onAction="#ScheduleOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Medical" fx:id="medicalButton" onAction="#medicalCheckUpOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Results Certificates" fx:id="resultButton" onAction="#resultAndCertificateOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Billing" fx:id="billButton" onAction="#billOnActionButton"
                    style="-fx-background-color: #3949AB; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
            <Button text="Leave" fx:id="leaveButton" onAction="#leaveOnActionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10 0 0 20;" />
        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Billing" style="-fx-font-size: 26;" />

            <TableView fx:id="duePaymentTableView" prefHeight="240">
                <columns>
                    <TableColumn fx:id="billNameTableColumn" text="Bill Name" prefWidth="180" />
                    <TableColumn fx:id="amountTableColumn" text="Amount" prefWidth="150" />
                    <TableColumn fx:id="lastPaymentTableColumn" text="Last Payment Date" prefWidth="180" />
                    <TableColumn fx:id="paymentDateTableColumn" text="Payment Date" prefWidth="180" />
                </columns>
            </TableView>

            <HBox spacing="15">
                <TextField fx:id="enterTransactionIdTextField" promptText="Enter Transaction ID" prefWidth="260"/>
                <Button text="Submit" onAction="#submitOnActionButton" prefWidth="120"/>
                <Button text="Download Bill" onAction="#downloadOnActionButton" prefWidth="150"/>
                <Button text="Clear Bill" onAction="#clearBillOnActionButton" prefWidth="120"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
