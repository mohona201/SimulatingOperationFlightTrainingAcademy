    </left>

    <!-- ================= CENTER PANEL ================= -->
    <center>
        <VBox spacing="30"
              style="-fx-padding: 35; -fx-background-color: #E2E7BD;"
              BorderPane.alignment="CENTER">
            <children>

                <Label text="Financial Status &amp; Billing"
                       style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#2A2A2A;" />

                <!-- DUE PAYMENTS CARD -->
