<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-radius: 25; -fx-background-color: #E2E7BD;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.simulatingoperationflighttrainingacademy.LoginController">

    <center>
        <HBox alignment="CENTER" prefHeight="546.0" prefWidth="900.0">
            <children>
                <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 4);" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="30" left="40" right="40" top="30" />
                    </padding>
                    <children>

                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3A3A3A;" text="Flight Training Academy" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Sign In to Your Account" />

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #555555;" text="User ID" />
                                <TextField fx:id="usernameTextField" prefWidth="260.0" promptText="Enter your ID or email" style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-padding: 6 10;" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #555555;" text="Password" />
                                <PasswordField fx:id="passwordField" prefWidth="260.0" promptText="Enter your password" style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-padding: 6 10;" />
                            </children>
                        </VBox>

                        <VBox spacing="8" />

                        <VBox spacing="10">
                            <children>
                                <Button fx:id="loginButton" onAction="#loginOnActionButton" prefHeight="32.0" prefWidth="260.0" style="-fx-background-color: #4A4A3C; -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 12;" text="Sign In" />
                                <Button fx:id="clearButton" onAction="#clearOnActionButton" prefHeight="28.0" prefWidth="260.0" style="-fx-background-color: #BBC598; -fx-text-fill: #FFFFFF; -fx-font-size: 12px; -fx-background-radius: 10;" text="Clear" />
                            </children>
                        </VBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="201.0" text="Dont have a account?  " />
                        <Button fx:id="signUp" onAction="#signUpOnActionButton" prefHeight="27.0" prefWidth="74.0" style="-fx-background-color: #4A4A3C; -fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-background-radius: 12;" text="Sign Up" />
                     </children>
                  </HBox>

                        <Label fx:id="loginStatusLabel" style="-fx-text-fill: #C62828; -fx-font-size: 11px;" text="" />

                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
   <bottom>
      <VBox prefHeight="30.0" prefWidth="900.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <VBox prefHeight="50.0" prefWidth="900.0" BorderPane.alignment="CENTER" />
   </top>

</BorderPane>
